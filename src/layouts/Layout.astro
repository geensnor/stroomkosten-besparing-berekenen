---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="svg" href="/favicon.svg" />
		<script
			async
			defer
			data-website-id="028be4c4-d2fe-4e40-b0b0-4dd7f638e236"
			src="https://umami-geensnor.vercel.app/umami.js"
		></script>
		<title>{title}</title>
	</head>
	<body class="bg-slate-50">
		<slot />
	</body>
</html>
