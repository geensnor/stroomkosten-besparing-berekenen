---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="svg" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50">
		<slot />
	</body>
</html>
